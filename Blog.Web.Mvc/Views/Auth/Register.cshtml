@model RegisterViewModel
<section class="pt-5 padding-bottom">
	<div class="container">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<div class="row justify-content-center">
					<div class="col-lg-8">
						<h2 class="mb-4">Register</h2>
						<form asp-action="register" method="post" id="contact-form" class="contact-form">
							<div class="row">
								<div class="col-md-12">
									<div class="form-group">
										<label asp-for="Name"></label>
										<input asp-for="Name" class="form-control form-control-email" type="text" required>
										<span asp-validation-for="Name"></span>
									</div>

									<div class="form-group">
										<label asp-for="City"></label>
										<input asp-for="City" class="form-control form-control-email" type="text" required>
										<span asp-validation-for="City"></span>
									</div>

									<div class="form-group">
										<label asp-for="Email"></label>
										<input asp-for="Email" class="form-control form-control-email" type="email" required>
										<span asp-validation-for="Email"></span>
									</div>

									<div class="form-group">
										<label asp-for="Password"></label>
										<input asp-for="Password" class="form-control form-control-password" type="password" required>
										<span asp-validation-for="Password"></span>
									</div>

									<div class="form-group">
										<label asp-for="Phone"></label>
										<input asp-for="Phone" class="form-control form-control-email" type="text" required>
										<span asp-validation-for="Phone"></span>
									</div>
									<div class="d-flex justify-content-between mt-3 mb-2">
										<button class="btn btn-primary solid blank" type="submit">Register</button>
										<h3 class="text-danger mt-1 me-2">@ViewBag.Error</h3>
									</div>
									<a asp-controller="auth" asp-action="login">Already have an account? Login here</a>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>